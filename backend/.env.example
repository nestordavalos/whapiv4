# =================================
# Storage Configuration
# =================================
# Storage type: local | s3 | s3_compatible
STORAGE_TYPE=local

# S3 / S3-Compatible Storage Settings
# For AWS S3:
STORAGE_S3_BUCKET=
STORAGE_S3_REGION=us-east-1
STORAGE_S3_ACCESS_KEY=
STORAGE_S3_SECRET_KEY=

# For S3-Compatible Services (MinIO, DigitalOcean Spaces, Cloudflare R2, Backblaze B2, etc.)
# Example for MinIO: http://localhost:9000
# Example for DigitalOcean Spaces: https://nyc3.digitaloceanspaces.com
# Example for Cloudflare R2: https://<account_id>.r2.cloudflarestorage.com
STORAGE_S3_ENDPOINT=

# Force path-style URLs (required for MinIO and some S3-compatible services)
# Set to "true" for MinIO
STORAGE_S3_FORCE_PATH_STYLE=false

# Folder prefix within the bucket (default: whapi)
# All files will be stored under this folder in S3
STORAGE_S3_PREFIX=whapi

# Custom public URL for CDN or custom domain (optional)
# If not set, will use the default S3/endpoint URL
STORAGE_S3_PUBLIC_URL=

# Fallback to local storage when S3 is unavailable (default: true)
# Files will be saved locally and synced to S3 when available
STORAGE_FALLBACK_TO_LOCAL=true

# Delete local files after successful upload to S3 (default: false)
# Set to "true" to save disk space - files will only exist in S3
# If S3 fails, files are kept locally until successfully synced
STORAGE_DELETE_LOCAL_AFTER_UPLOAD=true