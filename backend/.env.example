# =================================
# Storage Configuration
# =================================
# Storage type: local | s3 | s3_compatible
STORAGE_TYPE=local

# S3 / S3-Compatible Storage Settings
# For AWS S3:
STORAGE_S3_BUCKET=
STORAGE_S3_REGION=us-east-1
STORAGE_S3_ACCESS_KEY=
STORAGE_S3_SECRET_KEY=

# For S3-Compatible Services (MinIO, DigitalOcean Spaces, Cloudflare R2, Backblaze B2, etc.)
# Example for MinIO: http://localhost:9000
# Example for DigitalOcean Spaces: https://nyc3.digitaloceanspaces.com
# Example for Cloudflare R2: https://<account_id>.r2.cloudflarestorage.com
STORAGE_S3_ENDPOINT=

# Force path-style URLs (required for MinIO and some S3-compatible services)
# Set to "true" for MinIO
STORAGE_S3_FORCE_PATH_STYLE=false

# Folder prefix within the bucket (default: whapi)
# All files will be stored under this folder in S3
STORAGE_S3_PREFIX=whapi

# Custom public URL for CDN or custom domain (optional)
# If not set, will use the default S3/endpoint URL
STORAGE_S3_PUBLIC_URL=

# Fallback to local storage when S3 is unavailable (default: true)
# Files will be saved locally and synced to S3 when available
STORAGE_FALLBACK_TO_LOCAL=true

# Delete local files after successful upload to S3 (default: false)
# Set to "true" to save disk space - files will only exist in S3
# If S3 fails, files are kept locally until successfully synced
STORAGE_DELETE_LOCAL_AFTER_UPLOAD=true

# =================================
# WhatsApp Connection Configuration
# =================================
# Maximum retries before giving up (default: 5)
WHATSAPP_MAX_RETRIES=5

# Health check interval in milliseconds (default: 60000 = 1 minute)
WHATSAPP_HEALTH_CHECK_INTERVAL_MS=60000

# Initialization timeout in milliseconds (default: 120000 = 2 minutes)
WHATSAPP_INIT_TIMEOUT_MS=120000

# Auto-reconnect on disconnect (default: true)
WHATSAPP_RECONNECT_ON_DISCONNECT=true

# Maximum reconnection attempts (default: 10)
WHATSAPP_MAX_RECONNECT_ATTEMPTS=10

# Enable circuit breaker (default: true)
WHATSAPP_CIRCUIT_BREAKER_ENABLED=true

# =================================
# Message Sync Configuration
# =================================
# Maximum messages to sync per chat (default: 50)
SYNC_MAX_MESSAGES_PER_CHAT=50

# Maximum chats to process (default: 100)
SYNC_MAX_CHATS=100

# Maximum message age in hours to sync (default: 24)
SYNC_MAX_MESSAGE_AGE_HOURS=24

# Delay between chat processing in ms (default: 100)
SYNC_DELAY_BETWEEN_CHATS=100

# Mark messages as seen after sync (default: true)
SYNC_MARK_AS_SEEN=true

# Create tickets as closed for already-read messages (default: true)
# When true: unread messages -> pending ticket, read messages -> closed ticket
SYNC_CREATE_CLOSED_FOR_READ=true