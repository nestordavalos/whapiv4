    "servers": [
        {
            "url": "https://localhost/8080",
            "description": "API taichauka"
        }
    ],
    "paths": {
        "/api/send": {
            "post": {
                "summary": "Enviando mensajes",
                "description": "Enviando mensajes",
                "tags": [
                    "SEND"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/SEND"
                            },
                            "examples": {
                                "SEND1": {
                                    "value": {
                                        "whatsappId": "1",
                                        "number": "595985000000",
                                        "body": "Mensaje de prueba API"
                                    }
                                },
                                "SEND2": {
                                    "value": {
                                        "number": "595985000000",
                                        "body": "Mensaje de prueba API",
                                        "whatsappId": "ID de Sector",
                                        "queueId": "ID de Setcor",
                                        "tagsId": "ID de Tag",
                                        "userId": "ID de user"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#components/schemas/SEND"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "¡Acceso no autorizado!"
                    },
                    "500": {
                        "description": "Erro interno!"
                    }
                }
            }
        },
        "/api/queue/list": {
            "get": {
                "summary": "Busca lista de Sectores",
                "tags": [
                    "Queue"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/Queue"
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "SEND": {
                "type": "object",
                "properties": {
                    "number": {
                        "name": "number",
                        "description": "Número de teléfono para enviar el mensaje. Debe incluir el código de país (sin signo más ni cero inicial).",
                        "required": true,
                        "type": "number"
                    },
                    "body": {
                        "name": "body",
                        "description": "Cuerpo del mensaje a enviar.",
                        "required": true,
                        "type": "string"
                    },
                    "whatsappId": {
                        "name": "whatsappId",
                        "description": "Cuerpo del mensaje a enviar.",
                        "required": false,
                        "type": "number"
                    },
                    "queueId": {
                        "name": "queueId",
                        "description": "Cuerpo del mensaje a enviar.",
                        "required": false,
                        "type": "number"
                    },
                    "tagsId": {
                        "name": "tagsId",
                        "description": "Cuerpo del mensaje a enviar.",
                        "required": false,
                        "type": "number"
                    },
                    "userId": {
                        "name": "userId",
                        "description": "Cuerpo del mensaje a enviar.",
                        "required": false,
                        "type": "number"
                    }
                }
            },
            "Queue": {
                "type": "object",
                "properties": {
                    "number": {
                        "type": "number"
                    },
                    "name": {
                        "type": "string"
                    },
                    "color": {
                        "type": "string"
                    },
                    "greetingMessage": {
                        "type": "string"
                    },
                    "startWork": {
                        "type": "string"
                    },
                    "endWork": {
                        "type": "string"
                    },
                    "absenceMessage": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}